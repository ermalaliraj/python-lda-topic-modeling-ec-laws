                                 <td>
                                    <p>57642 tonnes</p>
                                 </td>
                              </tr>
                              <tr>
                                 <td>
                                    <p>Netherlands</p>
                                 </td>
                                 <td>
                                    <p>62592 tonnes</p>
                                 </td>
                              </tr>
